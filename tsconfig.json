{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationDir": "types",
		"emitDeclarationOnly": true,
		"noImplicitAny": true,
		"diagnostics": true,
		"noImplicitThis": true,
		"noEmitOnError": true,
		"lib": ["es5", "es6", "dom"]
	},
	"target": "ES2018",
	"module": "ES6",
	"include": ["*.js"],
	"exclude": ["node_modules", "**/*.test.js"]
}
